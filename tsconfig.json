{
  "compilerOptions": {
    "target": "ES2020", // Use ES6 or higher (or another version you prefer)
    "typeRoots": ["./src/types/*.d.ts", "node_modules/@types"],
    "module": "CommonJS", // Use CommonJS modules for Node.js
    "outDir": "./dist", // Output directory for compiled JavaScript
    "rootDir": "./src", // Source directory for TypeScript files
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforces consistent file naming (important for case-sensitive file systems)
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts"], // Include TypeScript files in the 'src' directory
  "exclude": ["node_modules"] // Exclude the 'node_modules' directory
}
